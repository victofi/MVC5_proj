
@{
    ViewBag.Title = "ShowContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Contact</h2>
<br />
<form id="contact" action="/User/Send" method="post">
    <div class="row">
        <div class="col-xs-3">
            <fieldset>
                <div class="form-group">
                    <div class="input-group">
                        <input type="number" id="ID" name="ID" class="form-control input-lg" placeholder="Enter ID" required>
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <textarea id="Message" rows="5" cols="50" placeholder="Enter your description here..." name="Message" required></textarea>
                        <span class="passwordIcon input-group-addon"><i class="fa fa-lock"></i></span>
                    </div>
                </div>

            </fieldset>
            <div class="form-group">
                <input id="SubmitDescrip" type="submit" value="Send" />
            </div>
            <br />
            <span class="label label-success" style="font-size:large;">@TempData["yes"]</span>
            <span class="label label-danger" style="font-size:large;">@TempData["no"]</span>
        </div>
    </div>
</form>
<br />

<br />
<h2>Technical Support</h2>
<br />
<form id="It" action="/User/SendIT" method="post">
    <div class="row">
        <div class="col-xs-3">
            <fieldset>
                <div class="form-group">
                    <div class="input-group">
                        <input type="number" id="id" name="ID" class="form-control input-lg" placeholder="Enter ID" required>
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <textarea id="message" rows="5" cols="50" placeholder="Enter your message here..." required name="Message"></textarea>
                        <span class="passwordIcon input-group-addon"><i class="fa fa-lock"></i></span>
                    </div>
                </div>
            </fieldset>
            <div class="form-group">
                <input id="Submitmessage" type="submit" value="Add Request" />
            </div>
            <br />
            <span class="label label-success" style="font-size:large;">@TempData["yes"]</span>
            <span class="label label-danger" style="font-size:large;">@TempData["no"]</span>
        </div>
    </div>
</form>
